@model NoSQL_Proyecto_Saule.Models.Facturas

@{
    ViewBag.Title = "Create Factura";
}

<h2>Create Factura</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Factura</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.IdCompra.Id, "Compra", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.IdCompra.Id,
                new SelectList(ViewBag.Compras, "Value", "Text"),  // Asegurarse de usar "Compras"
                "Seleccione una Compra",
                new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdCompra.Id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IdVenta.Id, "Venta", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.IdVenta.Id,
                new SelectList(ViewBag.Ventas, "Value", "Text"),  // Cambiar "Venta" a "Ventas"
                "Seleccione una Venta",
                new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdVenta.Id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</div>
