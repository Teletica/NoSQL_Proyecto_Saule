@model IEnumerable<NoSQL_Proyecto_Saule.Models.Producto>

@{
    ViewBag.Title = "Lista de Productos";
}

<p>
    @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-dark no-border" })
</p>

<h2 style="font-family: Arial, Helvetica, sans-serif">Lista de Productos</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().NombreProducto)</th>
                <th>@Html.DisplayNameFor(model => model.First().DescripcionProducto)</th>
                <th>@Html.DisplayNameFor(model => model.First().Precio)</th>
                <th>@Html.DisplayNameFor(model => model.First().StockProducto)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NombreProducto)</td>
                    <td>@Html.DisplayFor(modelItem => item.DescripcionProducto)</td>
                    <td>@string.Format("{0:C}", item.Precio)</td>
                    <td>@Html.DisplayFor(modelItem => item.StockProducto)</td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-dark no-border" }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-dark no-border" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .no-border {
        border-radius: 0 !important;
    }
</style>
