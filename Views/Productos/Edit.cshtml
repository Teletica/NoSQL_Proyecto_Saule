@model NoSQL_Proyecto_Saule.Models.Producto

@{
    ViewBag.Title = "Editar Producto";
}

<h2 style="font-family: Arial, Helvetica, sans-serif">Editar Producto</h2>

@using (Html.BeginForm("Edit", "Productos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
        @Html.HiddenFor(model => model.Id)

        <!-- Nombre del Producto -->
        <div class="form-group">
            @Html.LabelFor(model => model.NombreProducto, "Nombre del Producto", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.NombreProducto, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NombreProducto, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Descripción del Producto -->
        <div class="form-group">
            @Html.LabelFor(model => model.DescripcionProducto, "Descripción", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.DescripcionProducto, new { @class = "form-control", rows = 3 })
                @Html.ValidationMessageFor(model => model.DescripcionProducto, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Precio -->
        <div class="form-group">
            @Html.LabelFor(model => model.Precio, "Precio (₡)", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Precio, new { @class = "form-control", type = "number", step = "0.01" })
                @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Stock -->
        <div class="form-group">
            @Html.LabelFor(model => model.StockProducto, "Cantidad en Inventario", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.StockProducto, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StockProducto, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Selección de Grupo -->
        <div class="form-group">
            @Html.LabelFor(model => model.IdGrupo, "Grupo", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdGrupo.Id, new SelectList(ViewBag.Grupos, "Value", "Text"), null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdGrupo, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Selección de Marca -->
        <div class="form-group">
            @Html.LabelFor(model => model.IdMarca, "Marca", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdMarca.Id, new SelectList(ViewBag.Marcas, "Value", "Text"), null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdMarca, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Selección de Proveedor -->
        <div class="form-group">
            @Html.LabelFor(model => model.IdProveedor, "Proveedor", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdProveedor.Id, new SelectList(ViewBag.Proveedores, "Value", "Text"), null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdProveedor, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />

        <!-- Botones de Acción -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-dark no-border">Guardar Producto</button>
                <a href="@Url.Action("Index", "Productos")" class="btn btn-dark no-border" style="width: 125px">Cancelar</a>
            </div>
        </div>

        <style>
            .no-border {
                border-radius: 0 !important;
            }
        </style>
    </div>
}