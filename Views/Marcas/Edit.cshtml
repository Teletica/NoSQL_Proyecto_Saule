@model NoSQL_Proyecto_Saule.Models.Marca

@{
    ViewBag.Title = "Editar Marca";
}

<h2 style="font-family: Arial, Helvetica, sans-serif">Editar Marca.</h2>

@using (Html.BeginForm("Edit", "Marcas", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
        @Html.HiddenFor(model => model.Id)

        <!-- Nombre de la Marca -->
        <div class="form-group">
            @Html.LabelFor(model => model.nombreMarca, "Nombre de la Marca", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.nombreMarca, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.nombreMarca, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Logo de la Marca -->
        <div class="form-group">
            @Html.LabelFor(model => model.imgLogoMarca, "Logo", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" id="imgLogoMarca" name="imgLogoMarcaFile" class="form-control" />
                @Html.ValidationMessageFor(model => model.imgLogoMarca, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Estado de la Marca -->
        <div class="form-group">
            @Html.LabelFor(model => model.estadoMarca, "Estado", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.estadoMarca)
                    @Html.ValidationMessageFor(model => model.estadoMarca, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <br />

        <!-- Botones de Acción -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-dark no-border">Guardar Marca</button>
                <a href="@Url.Action("Index", "Marcas")" class="btn btn-dark no-border" style="width: 125px">Cancelar</a>
            </div>
        </div>

        <style>
            .no-border {
                border-radius: 0 !important;
            }
        </style>
    </div>
}
