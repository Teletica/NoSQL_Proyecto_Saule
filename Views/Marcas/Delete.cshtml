@model NoSQL_Proyecto_Saule.Models.Marca

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Marca</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.nombreMarca)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombreMarca)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.imgLogoMarca)
        </dt>

        <dd>
            @if (Model.imgLogoMarca != null && Model.imgLogoMarca.Length > 0)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.imgLogoMarca)" alt="Logo de @Model.nombreMarca" style="max-width: 300px; max-height: 300px;" />
            }
            else
            {
                <p>No image available</p>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.estadoMarca)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.estadoMarca)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
